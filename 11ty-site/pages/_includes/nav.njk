  <div class="dev-toolbar-collapse">
    <div class="dev-toolbar">
      <div class="dev-toolbar-body">
        Development
        <span class="flex-fill"></span>
        <div class="hstack gap-2">
          <a
            href="/test/"
            class="link-white"
            >Test Page</a
          >
          <a
            href="/uikit/"
            class="btn btn-sm btn-light"
            >UI Kit</a
          >
        </div>
