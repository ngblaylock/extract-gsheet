{
  "liveServer.settings.port": 5502,
  "files.associations": {
    "*.njk": "html-nunjucks"
  },
  "emmet.includeLanguages": {
    "html-nunjucks": "html"
  },
  "path-autocomplete.pathMappings": {
    "_partials": "${folder}/11ty-site/pages/_includes/_partials",
    "$root": [
      "${folder}/dev"
    ],
    "{{root}}": [
      "${folder}/dev"
    ],
  },
  "prettier.documentSelectors": [
    "**/*.njk"
  ],
  "actionButtons": {
    "defaultColor": "#546E7A",
    "loadNpmCommands": false,
    "commands": [
      {
        "name": "DEV",
        "command": "npm run dev",
      },
    ]
  }
}